	*--------------------------------------------------------------------------------------------------------
	function Sumarizar() as boolean
		local lnItem as integer, loItem as Object, lnSum_Cantidad as Number, lnSum_Total as Number

		with this
			lnSum_Cantidad = 0
			lnSum_Total = 0
			if this.lEsNavegacion
				if select( 'c_Ordencurva' ) > 0 and reccount( 'c_Ordencurva' ) > 0
					sum Cantidad, Total;
						 to ;
						 lnSum_Cantidad, lnSum_Total
				endif
				this.lEsNavegacion = .f.
			else
				for lnItem = 1 to this.count
					if .oItem.NroItem = lnItem
					else
						loItem = .Item[ lnItem ]
						with loItem 
							if !empty(.PRODUCTO_PK)
								lnSum_Cantidad = lnSum_Cantidad + .Cantidad
								lnSum_Total = lnSum_Total + .Total
							endif
						endwith
					endif
				endfor

				if .oItem.ValidarExistenciaCamposFijos() and .oItem.NroItem<=this.count
					loItem = .oItem
					with loItem 
						lnSum_Cantidad = lnSum_Cantidad + .Cantidad
						lnSum_Total = lnSum_Total + .Total
					endwith
				endif
			endif

			if .Sum_Cantidad != lnSum_Cantidad
				.Sum_Cantidad = lnSum_Cantidad
				.EventoCambioSum_Cantidad()
			endif
			if .Sum_Total != lnSum_Total
				.Sum_Total = lnSum_Total
				.EventoCambioSum_Total()
			endif

		endwith
	endfunc

