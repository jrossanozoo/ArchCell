	*--------------------------------------------------------------------------------------------------------
	Function Cargar() as Void
		local loItem as object, lnI as integer, lcClave as string, lcFiltro as String 
		lnI = 1

		select c_Ordencurva
		lcFiltro = this.ObtenerFiltro()
		scan for &lcFiltro
			loItem = createobject('ItemAuxiliar')

			loItem.CodigoOrden = c_Ordencurva.CodigoOrden
			loItem.NROITEM = c_Ordencurva.NROITEM
			loItem.Producto_PK = c_Ordencurva.Producto
			loItem.ProductoDetalle = c_Ordencurva.ProductoDetalle
			loItem.Color_PK = c_Ordencurva.Color
			loItem.ColorDetalle = c_Ordencurva.ColorDetalle
			loItem.Talle_PK = c_Ordencurva.Talle
			loItem.TalleDetalle = c_Ordencurva.TalleDetalle
			loItem.Cantidad = c_Ordencurva.Cantidad
			loItem.Total = c_Ordencurva.Total
			loItem.NroItem = lnI 
			this.AgregarItemPlano( loItem )
			lnI = lnI + 1
		endscan

		this.Sumarizar()

